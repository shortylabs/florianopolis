<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shortylabs.florianopolis" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".RouteListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.RouteService"
            android:exported="false"
            android:permission="android.permission.INTERNET" >
        </service>

        <activity
            android:name=".RouteDetailActivity"
            android:label="@string/title_activity_route_detail"
            android:parentActivityName=".RouteListActivity" >
>
        </activity>
        <activity
            android:name=".StopsActivity"
            android:label="@string/title_activity_stops" >
        </activity>
        <activity
            android:name=".WeekdayActivity"
            android:label="@string/title_activity_weekday" >
        </activity>
        <activity
            android:name=".SaturdayActivity"
            android:label="@string/title_activity_saturday" >
        </activity>
        <activity
            android:name=".SundayActivity"
            android:label="@string/title_activity_sunday" >
        </activity>
    </application>

</manifest>
